<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.searchLocation.SearchLocationFragment">

    <data>

        <variable
            name="searchLocationViewModel"
            type="com.marinoariasg.conduentweather.screens.searchLocation.SearchLocationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:paddingTop="16dp"
            android:text="Select Searching Parameter"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:theme="@style/RadioButtonStyle">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> searchLocationViewModel.onSetByCityName()}"

                android:text=" Name" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> searchLocationViewModel.onSetByCityId()}"
                android:text=" ID" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> searchLocationViewModel.onSetByLatAndLon()}"
                android:text=" Geographic Coordinates (Lat, Lon)" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> searchLocationViewModel.onSetByZipCode()}"
                android:text=" ZipCode" />

        </RadioGroup>

        <!--        search by City Name-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="City Name"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@={searchLocationViewModel.byCityName.cityName}"
            android:textSize="18sp"
            android:visibility="@{searchLocationViewModel.byCityName.visibility}" />

        <!--        country code-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="County Code"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@={searchLocationViewModel.byCityName.countryCode}"
            android:textSize="18sp"
            android:visibility="@{searchLocationViewModel.byCityName.visibility}" />

        <!--        search by Id-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="City Id"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@={searchLocationViewModel.byCityId.cityId}"
            android:textSize="18sp"
            android:visibility="@{searchLocationViewModel.byCityId.visibility}" />

        <!--        search by Geographic coordinates (lat)-->
        <!--        accepts negative an positive double-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="Lat"
            android:inputType="numberDecimal|numberSigned"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@={searchLocationViewModel.byLatAndLon.latitude}"
            android:textSize="18sp"
            android:visibility="@{searchLocationViewModel.byLatAndLon.visibility}" />

        <!--        search by Geographic coordinates (lon)-->
        <!--        accepts negative an positive double-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="Lon"
            android:inputType="numberDecimal|numberSigned"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@={searchLocationViewModel.byLatAndLon.longitude}"
            android:textSize="18sp"
            android:visibility="@{searchLocationViewModel.byLatAndLon.visibility}" />

        <!--        Search by ZipCode {zip code}, -->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="ZipCode"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@={searchLocationViewModel.byZipCode.zipCode}"
            android:textSize="18sp"
            android:visibility="@{searchLocationViewModel.byZipCode.visibility}" />

        <!--        Search by ZipCode ,{country code} -->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="Country code"
            android:inputType="textCapCharacters"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@={searchLocationViewModel.byZipCode.countryCode}"
            android:textSize="18sp"
            android:visibility="@{searchLocationViewModel.byZipCode.visibility}" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:onClick="@{() -> searchLocationViewModel.onSearch()}"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="@{searchLocationViewModel.showButton}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:temperature="@{searchLocationViewModel.response}"
                    tools:text="15Â°" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:weatherIcon="@{searchLocationViewModel.response}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/location_image_view"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/homenaje"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:cityName="@{searchLocationViewModel.response}"
                    tools:text="Crayford" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/homenaje"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:timeOfCalculation="@{searchLocationViewModel.response}"
                    tools:text="01/08 6:13 am" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>