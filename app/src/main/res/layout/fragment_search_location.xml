<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".searchLocation.SearchLocationFragment">

    <data>

        <variable
            name="searchLocationViewModel"
            type="com.marinoariasg.conduentweather.searchLocation.SearchLocationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="Select Searching Parameters"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> searchLocationViewModel.onSetByCityName()}"
                android:text="By City name"
                android:textColor="@android:color/white" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> searchLocationViewModel.onSetByCityId()}"
                android:text="By City ID"
                android:textColor="@android:color/white" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> searchLocationViewModel.onSetByLatAndLon()}"
                android:text="By lat, lon"
                android:textColor="@android:color/white" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> searchLocationViewModel.onSetByZipCode()}"
                android:text="By ZipCode"
                android:textColor="@android:color/white" />

        </RadioGroup>

        <!--        search by City Name-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="City Name"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:text="@={searchLocationViewModel.cityName}"
            android:visibility="@{searchLocationViewModel.showByCityNameOptions}" />

<!--        country code-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="County Code"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:text="@={searchLocationViewModel.countryCode}"
            android:visibility="@{searchLocationViewModel.showByCityNameOptions}" />

        <!--        search by Id-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:hint="City Id"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:text="@={searchLocationViewModel.cityId}"
            android:visibility="@{searchLocationViewModel.showByCityIdOptions}" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_location_background_edit_text"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="@{() -> searchLocationViewModel.onSearch()}"
            android:visibility="@{searchLocationViewModel.showButton}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    app:temperature="@{searchLocationViewModel.response}"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    tools:text="15Â°" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:weatherIcon="@{searchLocationViewModel.response}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/location_image_view"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/location_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/homenaje"
                    app:cityName="@{searchLocationViewModel.response}"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="Crayford" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/homenaje"
                    app:timeOfCalculation="@{searchLocationViewModel.response}"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="01/08 6:13 am" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>